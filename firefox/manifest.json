{
  "manifest_version": 2,
  "name": "Prolific Tool",
  "version": "0.1.0",
  "description": "Firefox extension for Prolific to notify you when studies are available",
  "default_locale": "en",
  "permissions": [
    "storage",
    "notifications",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://app.prolific.com/*"
      ],
      "js": [
        "dist/content.js"
      ],
      "css": [
        "styles/dark_mode.css"
      ]
    }
  ],
  "background": {
    "scripts": [
      "dist/background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_title": "Prolific Tool"
  },
  "icons": {
    "16": "imgs/logo.png",
    "48": "imgs/logo.png",
    "128": "imgs/logo.png"
  },
  "web_accessible_resources": [
    "styles/dark_mode.css"
  ]
}